# C++ Compiler command
CXX = g++

# C++ Compiler options
IPOPT_CXXFLAGS = -O3 -pipe -DNDEBUG -pedantic-errors -Wparentheses -Wreturn-type -Wcast-qual -Wall -Wpointer-arith -Wwrite-strings -Wconversion -Wno-unknown-pragmas -Wno-long-long   -DIPOPT_BUILD

# additional C++ Compiler options for linking
IPOPT_CXXLINKFLAGS =  -Wl,--rpath -Wl,/home/baxter/Documents/CoinIpopt/build/lib

# Include directories (we use the CYGPATH_W variables to allow compilation with Windows compilers)
IPOPT_INCL = `PKG_CONFIG_PATH=/home/baxter/Documents/CoinIpopt/build/lib64/pkgconfig:/home/baxter/Documents/CoinIpopt/build/lib/pkgconfig:/home/baxter/Documents/CoinIpopt/build/share/pkgconfig:/opt/ros/indigo/lib/x86_64-linux-gnu/pkgconfig:/home/baxter/ros_chair_ws/devel/lib/pkgconfig:/home/baxter/ros_devel_ws/devel/lib/pkgconfig:/home/baxter/ros_circuits_ws/devel/lib/pkgconfig:/home/baxter/ros_ws/devel/lib/pkgconfig:/opt/ros/indigo/lib/pkgconfig pkg-config --cflags ipopt`
#IPOPT_INCL = -I`$(CYGPATH_W) /home/baxter/Documents/CoinIpopt/build/include/coin` 

# Linker flags
IPOPT_LIBS = `PKG_CONFIG_PATH=/home/baxter/Documents/CoinIpopt/build/lib64/pkgconfig:/home/baxter/Documents/CoinIpopt/build/lib/pkgconfig:/home/baxter/Documents/CoinIpopt/build/share/pkgconfig:/opt/ros/indigo/lib/x86_64-linux-gnu/pkgconfig:/home/baxter/ros_chair_ws/devel/lib/pkgconfig:/home/baxter/ros_devel_ws/devel/lib/pkgconfig:/home/baxter/ros_circuits_ws/devel/lib/pkgconfig:/home/baxter/ros_ws/devel/lib/pkgconfig:/opt/ros/indigo/lib/pkgconfig pkg-config --libs ipopt`  -Wl,--rpath -Wl,/home/baxter/Documents/CoinIpopt/build/lib
##IPOPT_LIBS = -link -libpath:`$(CYGPATH_W) /home/baxter/Documents/CoinIpopt/build/lib` libipopt.lib -lm  -ldl
#IPOPT_LIBS = -L/home/baxter/Documents/CoinIpopt/build/lib -lipopt -lm  -ldl  -Wl,--rpath -Wl,/home/baxter/Documents/CoinIpopt/build/lib

# The following is necessary under cygwin, if native compilers are used
CYGPATH_W = echo

# Define objects for R to build
OBJECTS = ipoptr.o IpoptRNLP.o IpoptRJournal.o

# Convert to R macros
PKG_LIBS = ${IPOPT_CXXLINKFLAGS} ${IPOPT_LIBS}
PKG_CXXFLAGS = ${IPOPT_CXXFLAGS} ${IPOPT_INCL} -I../../../../../Ipopt/contrib/RInterface/src
